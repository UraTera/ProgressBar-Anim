<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/bnStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout style="@style/line">

            <FrameLayout
                style="@style/frame"
                android:background="@color/white">

                <com.tera.progressbar_anim.ProgressBarAnim
                    android:id="@+id/pb1"
                    style="@style/pb_bar" />
            </FrameLayout>

            <FrameLayout
                style="@style/frame"
                android:background="#223795">

                <com.tera.progressbar_anim.ProgressBarAnim
                    android:id="@+id/pb2"
                    style="@style/pb_bar"
                    app:itemColor="@color/white"
                    app:itemStyle="gradient" />
            </FrameLayout>

            <FrameLayout
                style="@style/frame"
                android:background="@color/white">

                <com.tera.progressbar_anim.ProgressBarAnim
                    android:id="@+id/pb4"
                    style="@style/pb_bar"
                    app:itemColor="@color/red"
                    app:itemStyle="circle" />

            </FrameLayout>

            <FrameLayout
                style="@style/frame"
                android:background="#01641C">

                <com.tera.progressbar_anim.ProgressBarAnim
                    android:id="@+id/pb3"
                    style="@style/pb_bar"
                    app:itemColor="@color/white"
                    app:itemStyle="arrow" />
            </FrameLayout>

            <FrameLayout
                style="@style/frame"
                android:background="@color/white">

                <com.tera.progressbar_anim.ProgressBarAnim
                    android:id="@+id/pb5"
                    style="@style/pb_bar"
                    app:itemColor="@color/green_700"
                    app:itemColorEnd="@color/yellow"
                    app:itemHeight="40dp"
                    app:itemStyle="gradient" />
            </FrameLayout>

            <FrameLayout
                style="@style/frame"
                android:background="@color/black">

                <com.tera.progressbar_anim.ProgressBarAnim
                    android:id="@+id/pb6"
                    style="@style/pb_bar"
                    app:animDuration="3000"
                    app:itemColor="@color/white"
                    app:itemCount="8"
                    app:itemIcon="@drawable/ic_star"
                    app:itemWidth="11dp" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/bnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Start/Stop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>